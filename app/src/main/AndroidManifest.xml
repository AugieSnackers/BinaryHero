<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.com.example.nelly.binaryhero">
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="edu.augustana.snackers.binaryhero.MainPageActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.augustana.snackers.binaryhero.PickLevelActivity" />
        <activity android:name="edu.augustana.snackers.binaryhero.GameArenaActivity"
            android:screenOrientation="portrait"

            />
        <activity android:name="edu.augustana.snackers.binaryhero.HelpActivity" />
        <activity android:name="edu.augustana.snackers.binaryhero.SettingsActivity" />
        <activity android:name="edu.augustana.snackers.binaryhero.NextLevelActivity"></activity>
    </application>

</manifest>
